<div class="wrap">
  <div id="content">
    <div id="main">
      <div class="full_w">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <label for="login">Username:</label>
            <%= f.email_field :email, :autofocus => true, :style => "width:98%" %>

            <label for="pass">Password:</label>
            <%= f.password_field :password, :style => "width:98%" %>

            <!--<%# if devise_mapping.rememberable? -%>-->
                <!--<div><%#= f.check_box :remember_me %> <%#= f.label :remember_me %></div>-->
            <!--<%# end -%>-->
            <div class="sep"></div>
            <%= f.submit "Sign in", :class=>"ok"%> <a href="">Forgotten password?</a>
        <% end %>
      </div>
      <div class="footer">&raquo; <a href="">http://yourpage.com</a> | Admin Panel</div>
    </div>
  </div>
</div>
<style>
    body{
        background: #f3f3f3 url('images/bg_login_top.jpg') no-repeat top center;
        color: #bebebe;
        font-family: Tahoma, Arial, Helvetica, sans-serif;
        font-size: 11px;
        margin: 0;
    }
</style>