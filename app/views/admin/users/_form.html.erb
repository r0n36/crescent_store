<%= semantic_form_for [:admin, @user] do |f| %>
    <%= f.inputs :name => "Advanced Options", :id => "advanced" do %>
        <%= f.input :store_id, :as => :select, :collection => Store.all.collect{|s| [s.name, s.id] }, :hint => "Please select your Store", :include_blank => false %>
        <%= f.input :role %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <%= f.input :address %>
    <% end %>
    <%= f.actions do %>
        <%= f.action :submit, :as => :button %>
        <%= f.action :cancel, :as => :link %>
    <% end %>
<% end %>