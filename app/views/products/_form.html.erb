<%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @product.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= f.fields_for :attributes do |u| %>
        <%= f.fields_for :stores do |s| %>
        <div class="container">
          <div class="jumbotron">
          <form class="form-horizontal" role="form">
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Product Name</label>
              <div class="col-sm-10">
                <%= f.text_field :name, :class=>"form-control", :id=>"inputEmail3", :placeholder=>"Product Name" %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Product Code</label>
              <div class="col-sm-10">
                <%= f.text_field :code, :class=>"form-control", :id=>"inputEmail3", :placeholder=>"Product Code" %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Product Category</label>
              <div class="col-sm-10">
                <%= u.select :category, product_categories, prompt: 'Select a Category', :class=>"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Product Price</label>
              <div class="col-sm-10">
                <%= u.text_field :Price, :class=>"form-control", :id=>"inputEmail3", :placeholder=>"Product Price" %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Product Size</label>
              <div class="col-sm-10">
                <%= u.text_field :size, :class=>"form-control", :id=>"inputEmail3", :placeholder=>"Product Size" %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Product Color</label>
              <div class="col-sm-10">
                <%= u.text_field :color, :class=>"form-control", :id=>"inputEmail3", :placeholder=>"Product Color" %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Product Quantity</label>
              <div class="col-sm-10">
                <%= f.text_field :quantity, :class=>"form-control", :id=>"inputEmail3", :placeholder=>"Product Quantity" %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Product Quantity</label>
              <div class="col-sm-10">
                <%= f.select :store_id, Store.all.collect{|p| [p.name, p.id] }, :class=>"form-control"%>
              </div>
            </div>

            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Product Quantity</label>
              <div class="col-sm-10">
                <input type="file" class="file_1"/>
              </div>
            </div>
            <div style="padding: 10px"><%= f.submit 'Save Product', :class=>"btn btn-success" %></div>
            <%= link_to 'Back', products_path, :class => "pull-right" %>
          </form>
          </div>
        </div>
        <% end %>
    <% end %>
<% end %>
